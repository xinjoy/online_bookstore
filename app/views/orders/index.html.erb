<% if notice %>
<p id="notice"><%= notice %></p> 
<% end %>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order#</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Items#</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td>
          <%
            count = 0
            order.line_items.each {|x| count += x.quantity} 
          %>
          <%= count %>
        </td>
        <td>
          <%
            total = 0
            order.line_items.each {|x| total += x.quantity * x.product.price} 
          %>
          <%= number_to_currency(total) %>
        </td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if false %>
<%= link_to 'New Order', new_order_path %>
<% end %>
